<div class="costumes_index">
  <div class="left">
    <h1> All Costumes nearby you:</h1>

    <div class="buttons">
      <a href="#" class="filter-button">Category</a>
      <a href="#" class="filter-button">Occasion</a>
      <a href="#" class="filter-button">Condition</a>
    </div>

    <div class="cards">
      <% @costumes.each do |costume| %>
        <div class="card">
          <% if costume.photo.attached? %>
          <%= cl_image_tag costume.photo.key, class: "card-img"%>
          <% end %>
          <div class="card-text">
            <%= costume.name %>
            <%= costume.price %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="right">
    <div class="mapouter">
      <div class="gmap_canvas">
        <iframe width="650" height="700" id="gmap_canvas" src="https://maps.google.com/maps?q=barcelona&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
        </iframe>
        <style>.mapouter{position:relative;text-align:right;height:100%;width:100%;}</style>
        <style>.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;border-radius: 50px;}</style>
      </div>
    </div>
  </div>

</div>
